<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
    <!-- mantis：MOB0018，處理人員：BJ085，需求單編號：MOB0018 理賠資料提交及列印作業 -->
<struts>
	<package name="APS046Action" extends="BaseAction" namespace="/aps/046">
		<!-- default -->
		<action name="default" class="APS046Action">
			<result>/WEB-INF/pages/APS/APS046/APS046U0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS046/APS046U0.jsp</result>
		</action>
		
		<!-- APS046E0.jsp頁面按下查詢鍵,開始查詢主檔資料 -->
		<action name="btnQuery" class="APS046Action" method="btnQuery">
			<result>/WEB-INF/pages/APS/APS046/APS046E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS046/APS046E0.jsp</result>
		</action>
		
		<!-- APS046E0.jsp(主檔)分頁資料中，重新輸入要顯示的頁數  -->
		<action name="txtChangePageIndex" class="APS046Action" method="txtChangePageIndex">
			<result>/WEB-INF/pages/APS/APS046/APS046E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS046/APS046E0.jsp</result>
		</action>
		
		<!-- APS046E0.jsp，(主檔)分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlPageSizeChanged" class="APS046Action" method="ddlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS046/APS046E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS046/APS046E0.jsp</result>
		</action>
		
		<!-- APS046E0.jsp，(主檔)查詢結果點選上下三角型排序 -->
		<action name="lnkSortQuery" class="APS046Action" method="lnkSortQuery">
			<result>/WEB-INF/pages/APS/APS046/APS046E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS046/APS046E0.jsp</result>
		</action>
		
		<!-- 連結至查詢頁面  -->
		<action name="lnkGoQuery" class="APS046Action" method="lnkGoQuery">
			<result>/WEB-INF/pages/APS/APS046/APS046E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS046/APS046E0.jsp</result>
		</action>
		
		<!-- 連結至轉檔頁面  -->
		<action name="lnkGoUpload" class="APS046Action" method="lnkGoUpload">
			<result>/WEB-INF/pages/APS/APS046/APS046U0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS046/APS046U0.jsp</result>
		</action>
		
		<!-- 連結至列印頁面  -->
		<action name="lnkGoPrint" class="APS046Action" method="lnkGoPrint">
			<result>/WEB-INF/pages/APS/APS046/APS046P0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS046/APS046P0.jsp</result>
		</action>
		
		<!-- APS046U0.jsp頁面按下提交按鈕,將TMP檔資料寫入正式資料檔 -->
		<action name="btnSubmit" class="APS046Action" method="btnSubmit">
			<result>/WEB-INF/pages/APS/APS046/APS046U0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS046/APS046U0.jsp</result>
		</action>
		
		<!-- APS046P0.jsp頁面按下列印清單按鈕,產生理賠清單EXCEL檔案  -->
		<action name="btnGenListFile" class="APS046Action" method="btnGenListFile">
			<result>/WEB-INF/pages/APS/APS046/APS046P0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS046/APS046P0.jsp</result>
			<result name="success" type="stream">
				<param name="contentType">text/vnd.ms-excel</param>
				<param name="inputName">fileInputStream</param>
				<param name="contentDisposition">attachment;filename="${filename}"</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>
		
		<!-- APS046P0.jsp頁面按下列印計算書按鈕,產生理賠計算書PDF檔案  -->
		<action name="btnPrint" class="APS046Action" method="btnPrint">
			<result>/WEB-INF/pages/APS/APS046/APS046P0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS046/APS046P0.jsp</result>
			<result name="success" type="stream">
				<param name="contentType">application/pdf</param>
				<param name="inputName">fileInputStream</param>
				<param name="contentDisposition">attachment;filename="${filename}"</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>
	</package>
</struts>