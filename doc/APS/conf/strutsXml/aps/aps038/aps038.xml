<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd"> 
<!-- mantis：FIR0495，處理人員：CC009，需求單編號：FIR0495_住火-APS板信回饋檔-排程查詢作業 -->
<struts>
	<package name="APS038Action" extends="BaseAction" namespace="/aps/038">
		<!-- default -->
		<action name="default" class="APS038Action">
			<result>/WEB-INF/pages/APS/APS038/APS038E0.jsp</result>
		</action>
		
		<!-- APS038E0.jsp按下查詢鍵，搜尋資料 -->
		<action name="btnQuery" class="APS038Action" method="btnQuery">
			<result>/WEB-INF/pages/APS/APS038/APS038E0.jsp</result>
		</action>

		<!-- APS038E0.jsp(主檔)分頁資料中，重新輸入要顯示的頁數 -->
		<action name="txtChangePageIndex" class="APS038Action" method="txtChangePageIndex">
			<result>/WEB-INF/pages/APS/APS038/APS038E0.jsp</result>
		</action>

		<!-- APS038E0.jsp(主檔)分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlPageSizeChanged" class="APS038Action" method="ddlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS038/APS038E0.jsp</result>
		</action>

		<!-- APS038E0.jsp頁面按下主檔批次號碼資料，查詢明細資料 -->
		<action name="lnkGoDetailQuery" class="APS038Action" method="lnkGoDetailQuery">
			<result>/WEB-INF/pages/APS/APS038/APS038E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS038/APS038E0.jsp</result>
		</action>

		<!-- APS038E1.jsp(明細)分頁資料中，重新輸入要顯示的頁數 -->
		<action name="txtDtlChangePageIndex" class="APS038Action" method="txtDtlChangePageIndex">
			<result>/WEB-INF/pages/APS/APS038/APS038E1.jsp</result>
		</action>

		<!-- APS038E1.jsp(明細)分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlDtlPageSizeChanged" class="APS038Action" method="ddlDtlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS038/APS038E1.jsp</result>
		</action>

		<!-- APS038E0.jsp主檔清單資料中，按下檔案名稱，下載檔案 -->
		<action name="downloadBopFile" class="APS038Action" method="downloadBopFile">
			<result>/WEB-INF/pages/APS/APS038/APS038E0.jsp</result>
			<result name="success" type="stream">
				<param name="contentType">application/octet-stream</param>
				<param name="inputName">fileInputStream</param>
				<param name="contentDisposition">attachment;filename="${firAgtBatchGenfile.fileName}.zip"</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>

	</package>
</struts>