<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd"> 
<!-- mantis：OTH0159，處理人員：CD094，需求單編號：OTH0159 電子保單系統條款檢核不通過資料通知(APS) -->
<struts>
	<package name="APS054Action" extends="BaseAction" namespace="/aps/054">
		<!-- default -->
		<action name="default" class="APS054Action">
			<result>/WEB-INF/pages/APS/APS054/APS054E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS054/APS054E0.jsp</result>
		</action>
		
		<!-- APS054E0.jsp頁面按下開始查詢鍵,搜尋資料 -->
		<action name="btnQuery" class="APS054Action" method="btnQuery">
			<result>/WEB-INF/pages/APS/APS054/APS054E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS054/APS054E0.jsp</result>
		</action>
		
		<!-- APS054E0.jsp，分頁資料中，重新輸入要顯示的頁數 -->
		<action name="txtChangePageIndex" class="APS054Action" method="txtChangePageIndex">
			<result>/WEB-INF/pages/APS/APS054/APS054E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS054/APS054E0.jsp</result>
		</action>
		
		<!-- APS054E0.jsp，分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlPageSizeChanged" class="APS054Action" method="ddlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS054/APS054E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS054/APS054E0.jsp</result>
		</action>
		
		<action name="lnkGoDownload" class="APS054Action" method="lnkGoDownload">
			<result>/WEB-INF/pages/APS/APS054/APS054E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS054/APS054E0.jsp</result>
			<result name="success" type="stream">
				<param name="contentType">application/octet-stream</param>
				<param name="inputName">fileInputStream</param>
				<param name="contentDisposition">attachment;filename="${newepolicyVo.filename}"</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>
		
	</package>
</struts>