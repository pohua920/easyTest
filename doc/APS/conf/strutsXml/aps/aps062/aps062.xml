<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd"> 
<!-- mantis：FIR0681，處理人員：DP0714，住火-APS元大回饋檔-排程查詢作業 -->
<struts>
	<package name="APS062Action" extends="BaseAction" namespace="/aps/062">
		<!-- default -->
		<action name="default" class="APS062Action">
			<result>/WEB-INF/pages/APS/APS062/APS062E0.jsp</result>
		</action>
		
		<!-- 按下查詢鍵，搜尋資料 -->
		<action name="btnQuery" class="APS062Action" method="btnQuery">
			<result>/WEB-INF/pages/APS/APS062/APS062E0.jsp</result>
		</action>

		<!-- (主檔)分頁資料中，重新輸入要顯示的頁數 -->
		<action name="txtChangePageIndex" class="APS062Action" method="txtChangePageIndex">
			<result>/WEB-INF/pages/APS/APS062/APS062E0.jsp</result>
		</action>

		<!-- (主檔)分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlPageSizeChanged" class="APS062Action" method="ddlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS062/APS062E0.jsp</result>
		</action>

		<!-- 頁面按下主檔批次號碼資料，查詢明細資料 -->
		<action name="lnkGoDetailQuery" class="APS062Action" method="lnkGoDetailQuery">
			<result>/WEB-INF/pages/APS/APS062/APS062E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS062/APS062E0.jsp</result>
		</action>

		<!-- (明細)分頁資料中，重新輸入要顯示的頁數 -->
		<action name="txtDtlChangePageIndex" class="APS062Action" method="txtDtlChangePageIndex">
			<result>/WEB-INF/pages/APS/APS062/APS062E1.jsp</result>
		</action>

		<!-- (明細)分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlDtlPageSizeChanged" class="APS062Action" method="ddlDtlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS062/APS062E1.jsp</result>
		</action>

		<!-- 主檔清單資料中，按下檔案名稱，下載檔案 -->
		<action name="downloadBopFile" class="APS062Action" method="downloadBopFile">
			<result>/WEB-INF/pages/APS/APS062/APS062E0.jsp</result>
			<result name="success" type="stream">
				<param name="contentType">application/octet-stream</param>
				<param name="inputName">fileInputStream</param>
				<param name="contentDisposition">attachment;filename="${firAgtBatchGenfile.fileName}.zip"</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>
	</package>
</struts>
