<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="APS051Action" extends="BaseAction" namespace="/aps/051">
		<!-- default -->
		<action name="default" class="APS051Action">
			<result>/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
		</action>
		
		<!-- 連結至查詢頁面 -->
		<action name="lnkGoQuery" class="APS051Action" method="lnkGoQuery">
			<result>/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
		</action>
		
		<!-- 連結至轉入頁面 -->
		<action name="lnkGoCreate" class="APS051Action" method="lnkGoCreate">
			<result>/WEB-INF/pages/APS/APS051/APS051A0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS051/APS051A0.jsp</result>
		</action>
		
		<!-- 按下查詢鍵，開始搜尋  -->
		<action name="btnQuery" class="APS051Action" method="btnQuery">
			<result>/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
		</action>
		
		<action name="btnQueryCancel" class="APS051Action" method="btnQueryCancel">
			<result>/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
		</action>
		
		<!-- 分頁資料中，重新輸入要顯示的頁數 -->
		<action name="txtChangePageIndex" class="APS051Action" method="txtChangePageIndex">
			<result>/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
		</action>
		
		<!-- 分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlPageSizeChanged" class="APS051Action" method="ddlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
		</action>
		
		<!-- 查詢結果點選上下三角型排序 -->
		<action name="lnkSortQuery" class="APS051Action" method="lnkSortQuery">
			<result>/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
		</action>
		
		<!-- 按下存檔鍵，做新增儲存動作 -->
		<action name="btnCreate" class="APS051Action" method="btnCreate">
			<result>/WEB-INF/pages/APS/APS051/APS051U0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS051/APS051A0.jsp</result>
		</action>
		
		<!-- 按下API發送鍵，做儲存及呼叫API動作 -->
		<action name="btnSend" class="APS051Action" method="btnSend">
			<result>/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS051/APS051U0.jsp</result>
		</action>
		
		<!-- 按下XML上傳鍵，做儲存及呼叫SFTP動作 -->
		<action name="btnUpload" class="APS051Action" method="btnUpload">
			<result>/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS051/APS051U0.jsp</result>
		</action>
		
		<!-- 按下取消鍵，新增欄位資料清除 -->
		<action name="btnCreateCancel" class="APS051Action" method="btnCreateCancel">
			<result>/WEB-INF/pages/APS/APS051/APS051A0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS051/APS051A0.jsp</result>
		</action>
		
		<action name="lnkGoView" class="APS051Action" method="lnkGoView">
			<result>/WEB-INF/pages/APS/APS051/APS051U1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
		</action>
		
		<!-- 按下取消鍵，做資料清除的動作 -->
		<action name="btnSaveCancel" class="APS051Action" method="btnSaveCancel">
			<result>/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
		</action>
		
		<action name="lnkGoSubmit" class="APS051Action" method="lnkGoSubmit">
			<result >/WEB-INF/pages/APS/APS051/APS051U0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS051/APS051E0.jsp</result>
		</action>

	</package>
</struts>