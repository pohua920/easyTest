<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<!--  mantis：，處理人員：BJ016，需求單編號：行動裝置險批次號手動下載作業 -->
<struts>
	<package name="APS050Action" extends="BaseAction" namespace="/aps/050">
		<action name="default" class="APS050Action">
			<result>/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
		</action>
		
		<!-- 連結到查詢頁面 -->
		<action name="lnkGoQuery" class="APS050Action" method="lnkGoQuery">
			<result>/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
		</action>
		
		<!-- 下載 -->
		<action name="btnDownloadData" class="APS050Action" method="btnDownloadData">
			<result>/WEB-INF/pages/APS/APS050/APS050A0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS050/APS050A0.jsp</result>
		</action>
		
		<!-- 連結至下載頁面 -->
		<action name="lnkGoDownloadData" class="APS050Action" method="lnkGoDownloadData">
			<result>/WEB-INF/pages/APS/APS050/APS050A0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS050/APS050A0.jsp</result>
		</action>
		
		<!-- APS050E0.jsp頁面按下開始查詢鍵,搜尋資料 -->
		<action name="btnQuery" class="APS050Action" method="btnQuery">
			<result>/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
		</action>
		
		<!-- APS050E0.jsp頁面按下重送終止通知書簡訊鍵 -->
		<action name="btnSendTerminationNotice" class="APS050Action" method="btnSendTerminationNotice">
			<result>/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
		</action>
		
		<!-- APS050E0.jsp，分頁資料中，重新輸入要顯示的頁數 -->
		<action name="txtChangePageIndex" class="APS050Action" method="txtChangePageIndex">
			<result>/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
		</action>
		
		<!-- APS050E0.jsp，分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlPageSizeChanged" class="APS050Action" method="ddlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
		</action>
		
		<!-- 連結到資料明細頁面 -->
		<action name="lnkGoDetail" class="APS050Action" method="lnkGoDetail">
			<result>/WEB-INF/pages/APS/APS050/APS050U0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
		</action>
		
		<action name="lnkDownloadProposal" class="APS050Action" method="lnkDownloadProposal">
			<result>/WEB-INF/pages/APS/APS050/APS050U0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS050/APS050U0.jsp</result>
			<result name="success" type="stream">
				<param name="contentType">application/octet-stream</param>
				<param name="inputName">fileInputStream</param>
				<param name="contentDisposition">attachment;filename="${aps050DetailResultVo.transactionId}.pdf"</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>
		
		<!-- APS050E0.jsp頁面按下要保書審核鍵 -->
		<action name="btnProposalFileCheck" class="APS050Action" method="btnProposalFileCheck">
			<result>/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
		</action>
		
		<action name="btnSendTerminationNoticeCancel" class="APS050Action" method="btnSendTerminationNoticeCancel">
			<result>/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
		</action>
		
		<action name="btnSendTerminationNoticeUnpaid" class="APS050Action" method="btnSendTerminationNoticeUnpaid">
			<result>/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
		</action>
		
		<!-- APS050E0.jsp 產生XLS檔案 -->
		<action name="btnGenExcel" class="APS050Action" method="btnGenExcel">
			<result>/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
			<result name="success" type="stream">
				<param name="contentType">application/vnd.openxmlformats-officedocument.spreadsheetml.sheet</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">attachment;filename="${fileName}"</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>
		
		<action name="btnSendProposalInsufficientNotify" class="APS050Action" method="btnSendProposalInsufficientNotify">
			<result>/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS050/APS050E0.jsp</result>
		</action>
	</package>
</struts>