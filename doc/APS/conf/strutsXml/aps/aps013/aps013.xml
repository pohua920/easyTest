<!-- 
mantis：OTH0093，處理人員：BJ085，需求單編號：OTH0093 傷害險通報查詢、重送介面 start
-->
<struts>
	<package name="APS013Action" extends="BaseAction" namespace="/aps/013">
		<!-- default -->
		<action name="default" class="APS013Action">
			<result>/WEB-INF/pages/APS/APS013/APS013E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS013/APS013E0.jsp</result>
		</action>
		
		<!-- APS013E0.jsp頁面按下查詢鍵,搜尋資料 -->
		<!--20220531修正class呼叫實體路徑，造成spring控管錯誤問題-->
		<action name="btnQuery" class="APS013Action" method="btnQuery">
			<result>/WEB-INF/pages/APS/APS013/APS013E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS013/APS013E0.jsp</result>
		</action>

		<!-- APS013E0.jsp 連結至查詢頁面-->
		<action name="lnkGoQuery" class="APS013Action" method="lnkGoQuery">
			<result>/WEB-INF/pages/APS/APS013/APS013E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS013/APS013E0.jsp</result>
		</action>

		<!-- (主檔)分頁資料中，重新輸入要顯示的頁數 -->
		<action name="txtChangePageIndex" class="APS013Action" method="txtChangePageIndex">
			<result>/WEB-INF/pages/APS/APS013/APS013E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS013/APS013E0.jsp</result>
		</action>
		
		<!-- (主檔)分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlPageSizeChanged" class="APS013Action" method="ddlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS013/APS013E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS013/APS013E0.jsp</result>
		</action>
		
		<!-- (主檔)查詢結果點選上下三角型排序 -->
		<action name="lnkSortQuery" class="APS013Action" method="lnkSortQuery">
			<result>/WEB-INF/pages/APS/APS013/APS013E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS013/APS013E0.jsp</result>
		</action>

		<!-- (明細)點選報送資料鍵查詢主檔詳細內容 -->
		<action name="lnkGoDetail" class="APS013Action" method="lnkGoDetail">
			<result>/WEB-INF/pages/APS/APS013/APS013E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS013/APS013E1.jsp</result>
		</action>
		
		<!-- (報送資料明細)APS013E1.jsp，分頁資料中，重新輸入要顯示的頁數 -->
		<action name="txtDtlChangePageIndex" class="APS013Action" method="txtDtlChangePageIndex">
			<result>/WEB-INF/pages/APS/APS013/APS013E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS013/APS013E1.jsp</result>
		</action>
		
		<!-- (報送資料明細)APS013E1.jsp，分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數  -->
		<action name="ddlDtlPageSizeChanged" class="APS013Action" method="ddlDtlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS013/APS013E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS013/APS013E1.jsp</result>
		</action>

		<!-- (報送資料明細)APS013E1.jsp，點選重送按鈕，修改cwp重送時間、重送人員、重送原因，且新增一筆資料在lia(並加上此筆資料在cwp中的oid)-->
		<action name="btnResend" class="APS013Action" method="btnResend">
			<result>/WEB-INF/pages/APS/APS013/APS013E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS013/APS013E1.jsp</result>
		</action>
		<action name="lnkQueryDefaultData" class="APS013Action" method="lnkQueryDefaultData">
			<result>/WEB-INF/pages/APS/APS013/APS013A0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS013/APS013E1.jsp</result>
		</action>
		
		<action name="btnReSendLia" class="APS013Action" method="btnReSendLia">
			<result>/WEB-INF/pages/APS/APS013/APS013A0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS013/APS013A0.jsp</result>
		</action>
	</package>
</struts>