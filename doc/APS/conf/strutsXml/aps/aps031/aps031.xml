<!-- mantis：FIR0427，處理人員：BJ085，需求單編號：FIR0427 個人險-保單通訊資料產生及下載作業  
	 mantis：FIR0436，處理人員：BJ085，需求單編號：FIR0436 住火-APS保單通訊資料產生及下載作業批次作業 -->
<struts>
	<package name="APS031Action" extends="BaseAction" namespace="/aps/031">
		<!-- default -->
		<action name="default" class="APS031Action">
			<result>/WEB-INF/pages/APS/APS031/APS031A0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS031/APS031A0.jsp</result>
		</action>
		
		<!-- 連結至查詢頁面 -->
		<action name="lnkGoQuery" class="APS031Action" method="lnkGoQuery">
			<result>/WEB-INF/pages/APS/APS031/APS031E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS031/APS031E0.jsp</result>
		</action>
		
		<!-- 連結至轉入頁面 -->
		<action name="lnkGoCreate" class="APS031Action" method="lnkGoCreate">
			<result>/WEB-INF/pages/APS/APS031/APS031A0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS031/APS031A0.jsp</result>
		</action>
		
		<!-- 按下執行按鈕，開始轉入資料 -->
		<action name="btnExecute" class="APS031Action" method="btnExecute">
			<result>/WEB-INF/pages/APS/APS031/APS031A0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS031/APS031A0.jsp</result>
		</action>
		
		<!-- 按下查詢鍵，開始搜尋  -->
		<action name="btnQuery" class="APS031Action" method="btnQuery">
			<result>/WEB-INF/pages/APS/APS031/APS031E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS031/APS031E0.jsp</result>
		</action>
		
		<!-- 分頁資料中，重新輸入要顯示的頁數 -->
		<action name="txtChangePageIndex" class="APS031Action" method="txtChangePageIndex">
			<result>/WEB-INF/pages/APS/APS031/APS031E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS031/APS031E0.jsp</result>
		</action>
		
		<!-- 分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlPageSizeChanged" class="APS031Action" method="ddlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS031/APS031E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS031/APS031E0.jsp</result>
		</action>
		
		<!-- 查詢結果點選上下三角型排序 -->
		<action name="lnkSortQuery" class="APS031Action" method="lnkSortQuery">
			<result>/WEB-INF/pages/APS/APS031/APS031E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS031/APS031E0.jsp</result>
		</action>
		
		<!-- 按下作廢按鈕，作廢此筆資料 -->
		<action name="btnVoidData" class="APS031Action" method="btnVoidData">
			<result>/WEB-INF/pages/APS/APS031/APS031E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS031/APS031E0.jsp</result>
		</action>
		
		<!-- 測試介面上執行批次功能 -->
<!-- 		<action name="btnExcuteBatch" class="APS031Action" method="btnExcuteBatch"> -->
<!-- 			<result>/WEB-INF/pages/APS/APS031/APS031E0.jsp</result> -->
<!-- 			<result name="input">/WEB-INF/pages/APS/APS031/APS031E0.jsp</result> -->
<!-- 		</action> -->
		
		<!-- 按下下載按鈕，開始下載檔案 -->
		<action name="btnDownloadFile" class="APS031Action" method="btnDownloadFile">
			<result>/WEB-INF/pages/APS/APS031/APS031E0.jsp</result>
			<result name="success" type="stream">
				<param name="contentType">application/octet-stream</param>
				<param name="inputName">fileInputStream</param>
				<param name="contentDisposition">attachment;filename="${bno}.xlsx"</param>
				<param name="bufferSize">1024</param>
			</result>
			<result name="input">/WEB-INF/pages/APS/APS031/APS031E0.jsp</result>
		</action>
	</package>
</struts>