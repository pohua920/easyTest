<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="Prpdbankinfo">

	<resultMap id="BaseResultMap" class="com.tlg.prpins.entity.Prpdbankinfo" >
	    <result column="BANKCODE" property="bankcode" jdbcType="VARCHAR" />
	    <result column="BANKNAME" property="bankname" jdbcType="VARCHAR" />
	    <result column="FLAG" property="flag" jdbcType="VARCHAR" />
  	</resultMap>
  	
	<resultMap id="wsMap" class="com.tlg.aps.vo.BankInfoVo" >
	    <result column="BANKCODE" property="bankCode" jdbcType="VARCHAR" />
	    <result column="BANKNAME" property="bankName" jdbcType="VARCHAR" />
  	</resultMap>

	<select id="select" resultMap="BaseResultMap" parameterClass="java.util.Map">
		<include refid="Utils.sql1" />
		SELECT * FROM <include refid="Utils.prpinsSchema"/>PRPDBANKINFO
		<dynamic prepend="WHERE">
			<isNotEmpty prepend="AND" property="bankcode">
				BANKCODE = #bankcode#
			</isNotEmpty>
			<isNotEmpty prepend="AND" property="bankname">
				BANKNAME = #bankname#
			</isNotEmpty>
			<isNotEmpty prepend="AND" property="banknameLike">
				BANKNAME LIKE '%' || #banknameLike# || '%'
			</isNotEmpty>
			<isNotEmpty prepend="AND" property="flag">
				FLAG = #flag#
			</isNotEmpty>
		</dynamic>
		<include refid="Utils.sql2" />
	</select>

	<select id="selectByParams" resultMap="BaseResultMap" parameterClass="java.util.Map">
		SELECT * FROM <include refid="Utils.prpinsSchema"/>PRPDBANKINFO
		<dynamic prepend="WHERE">
			<isNotEmpty prepend="AND" property="bankcode">
				BANKCODE = #bankcode#
			</isNotEmpty>
			<isNotEmpty prepend="AND" property="bankname">
				BANKNAME = #bankname#
			</isNotEmpty>
			<isNotEmpty prepend="AND" property="banknameLike">
				BANKNAME LIKE '%' || #banknameLike# || '%'
			</isNotEmpty>
			<isNotEmpty prepend="AND" property="flag">
				FLAG = #flag#
			</isNotEmpty>
		</dynamic>
	</select>
	
	<select id="selectByParamsForWs" resultMap="wsMap" parameterClass="java.util.Map">
		SELECT * FROM <include refid="Utils.prpinsSchema"/>PRPDBANKINFO
		WHERE 1 = 1
		
		<isNotEmpty prepend="" property="type1">
			AND SUBSTR(BANKCODE,4,4) = '0000'
			AND FLAG=0
		</isNotEmpty>
		
		<isNotEmpty prepend="" property="type2">
			AND SUBSTR(BANKCODE,0,3) = #type2#
			AND FLAG=0
		</isNotEmpty>
		
		<isNotEmpty prepend="" property="type3">
			AND BANKNAME LIKE '%' || #type3# || '%' 
			AND FLAG=1
		</isNotEmpty>
		
		<isNotEmpty prepend="" property="type4">
			AND SUBSTR(BANKCODE,0,1)= 'L'
			AND FLAG=2
		</isNotEmpty>
		
		<isNotEmpty prepend="" property="type5">
			AND BANKCODE= #type5#
		</isNotEmpty>
		
		ORDER BY BANKCODE
	</select>

 	
	<select id="count" resultClass="java.lang.Integer" parameterClass="java.util.Map">
		SELECT COUNT(*) FROM <include refid="Utils.prpinsSchema"/>PRPDBANKINFO
		<dynamic prepend="WHERE">
			<isNotEmpty prepend="AND" property="bankcode">
				BANKCODE = #bankcode#
			</isNotEmpty>
			<isNotEmpty prepend="AND" property="bankname">
				BANKNAME = #bankname#
			</isNotEmpty>
			<isNotEmpty prepend="AND" property="banknameLike">
				BANKNAME LIKE '%' || #banknameLike# || '%'
			</isNotEmpty>
			<isNotEmpty prepend="AND" property="flag">
				FLAG = #flag#
			</isNotEmpty>
		</dynamic>
	</select>

</sqlMap>