<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<!-- 
mantis：FIR0183，處理人員：BJ085，需求單編號：FIR0183 火險地址資料匯入 start
-->
<struts>
	<package name="APS005Action" extends="BaseAction" namespace="/aps/005">
		<!-- default -->
		<action name="default" class="APS005Action">
			<result>/WEB-INF/pages/APS/APS005/APS005U0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS005/APS005U0.jsp</result>
		</action>
		
		<!-- APS005E0.jsp頁面按下查詢鍵,搜尋資料 -->
		<!-- mantis：FIR609，處理人員：BJ085，需求單編號：FIR609 地址維護作業調整-FIR0521住火標的物地址正規化-FIR0357地址維護作業-->
		<action name="btnQuery" class="APS005Action" method="btnQuery">
			<result>/WEB-INF/pages/APS/APS005/APS005E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS005/APS005E0.jsp</result>
		</action>
		
		<!-- APS005E0.jsp頁面點選資料失敗筆數，搜尋資料-->
		<!-- mantis：FIR609，處理人員：BJ085，需求單編號：FIR609 地址維護作業調整-FIR0521住火標的物地址正規化-FIR0357地址維護作業-->
		<action name="btnQuery2" class="APS005Action" method="btnQuery2">
			<result>/WEB-INF/pages/APS/APS005/APS005E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS005/APS005E1.jsp</result>
		</action>

		<!-- APS005U0.jsp頁面按下確定轉入鍵,上傳檔案 -->
		<action name="btnFileUpd" class="APS005Action" method="btnFileUpd">
			<result>/WEB-INF/pages/APS/APS005/APS005U0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS005/APS005U0.jsp</result>
		</action>

		<!-- APS005E0.jsp 連結至查詢頁面-->
		<action name="lnkGoQuery" class="APS005Action" method="lnkGoQuery">
			<result>/WEB-INF/pages/APS/APS005/APS005E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS005/APS005E0.jsp</result>
		</action>		

		<!-- APS005U0.jsp 連結至檔案上傳頁面 -->
		<action name="lnkGoUpload" class="APS005Action" method="lnkGoUpload">
			<result>/WEB-INF/pages/APS/APS005/APS005U0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS005/APS005U0.jsp</result>
		</action>

		<!-- (主檔)分頁資料中，重新輸入要顯示的頁數 -->
		<action name="txtChangePageIndex" class="APS005Action" method="txtChangePageIndex">
			<result>/WEB-INF/pages/APS/APS005/APS005E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS005/APS005E0.jsp</result>
		</action>
		
		<!-- (主檔)分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlPageSizeChanged" class="APS005Action" method="ddlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS005/APS005E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS005/APS005E0.jsp</result>
		</action>
		
		<!-- (異常訊息頁面)分頁資料中，重新輸入要顯示的頁數 -->
		<action name="txtEmChangePageIndex" class="APS005Action" method="txtEmChangePageIndex">
			<result>/WEB-INF/pages/APS/APS005/APS005E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS005/APS005E1.jsp</result>
		</action>

		<!-- (異常訊息頁面)分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlEmPageSizeChanged" class="APS005Action" method="ddlEmPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS005/APS005E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS005/APS005E1.jsp</result>
		</action>

		<!-- 火險地址資料匯入作業 -->
		<action name="btnDataImport" class="APS005Action" method="btnDataImport">
			<result>/WEB-INF/pages/APS/APS004/APS004E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS004/APS004E0.jsp</result>
		</action>
		
		<!-- 下載sample檔案 -->
		<action name="btnDowloadSample" class="APS005Action" method="btnDowloadSample">
			<result>/WEB-INF/pages/APS/APS005/APS005U0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS005/APS005U0.jsp</result>
				<result name="success" type="stream">
				<param name="contentType">application/vnd.openxmlformats-officedocument.spreadsheetml.sheet</param>
				<param name="inputName">fileInputStream</param>
				<param name="contentDisposition">attachment;filename="${downloadFileName}"</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>

	</package>
</struts>