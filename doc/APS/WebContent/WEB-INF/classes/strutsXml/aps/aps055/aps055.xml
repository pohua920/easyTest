<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<!-- mantis：FIR0621，處理人員：BJ085，需求單編號：FIR0621 住火_臺銀續保作業_續件資料處理作業 -->
<struts>
	<package name="APS055Action" extends="BaseAction" namespace="/aps/055">
		<!-- default -->
		<action name="default" class="APS055Action">
			<result>/WEB-INF/pages/APS/APS055/APS055E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS055/APS055E0.jsp</result>
		</action>
		
		<!-- APS055E0.jsp頁面按下查詢鍵,開始查詢主檔資料 -->
		<action name="btnQuery" class="APS055Action" method="btnQuery">
			<result>/WEB-INF/pages/APS/APS055/APS055E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS055/APS055E0.jsp</result>
		</action>
		
		<!-- APS055E0.jsp(主檔)分頁資料中，重新輸入要顯示的頁數  -->
		<action name="txtChangePageIndex" class="APS055Action" method="txtChangePageIndex">
			<result>/WEB-INF/pages/APS/APS055/APS055E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS055/APS055E0.jsp</result>
		</action>
		
		<!-- APS055E0.jsp，(主檔)分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlPageSizeChanged" class="APS055Action" method="ddlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS055/APS055E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS055/APS055E0.jsp</result>
		</action>
		
		<!-- APS055E1.jsp頁面按下查詢鍵，查詢明細資料 -->
		<action name="btnDtlQuery" class="APS055Action" method="btnDtlQuery">
			<result>/WEB-INF/pages/APS/APS055/APS055E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS055/APS055E0.jsp</result>
		</action>
		
		<!-- APS055E0.jsp頁面按下主檔批次號碼資料，查詢明細資料 -->
		<action name="lnkGoDetailQuery" class="APS055Action" method="lnkGoDetailQuery">
			<result>/WEB-INF/pages/APS/APS055/APS055E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS055/APS055E0.jsp</result>
		</action>
		
		<!-- APS055E1.jsp(明細)分頁資料中，重新輸入要顯示的頁數 -->
		<action name="txtDtlChangePageIndex" class="APS055Action" method="txtDtlChangePageIndex">
			<result>/WEB-INF/pages/APS/APS055/APS055E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS055/APS055E1.jsp</result>
		</action>
		
		<!-- APS055E1.jsp(明細)分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlDtlPageSizeChanged" class="APS055Action" method="ddlDtlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS055/APS055E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS055/APS055E1.jsp</result>
		</action>

		<!-- APS055E1.jsp(明細)分頁資料中， 查詢結果點選上下三角型排序 -->
		<action name="lnkSortDtlQuery" class="APS055Action" method="lnkSortDtlQuery">
			<result>/WEB-INF/pages/APS/APS055/APS055E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS055/APS055E1.jsp</result>
		</action>
		
		<!-- APS055E1.jsp(明細)分頁資料中， 點選下載XLS按鈕，依查詢條件下載批次資料EXCEL -->
		<action name="btnDownloadXls" class="APS055Action" method="btnDownloadXls">
			<result>/WEB-INF/pages/APS/APS055/APS055E1.jsp</result>
			<result name="success" type="stream">
				<param name="contentType">application/octet-stream</param>
				<param name="inputName">fileInputStream</param>
				<param name="contentDisposition">attachment;filename="${downloadFilename}"</param>
				<param name="bufferSize">1024</param>
			</result>
			<result name="input">/WEB-INF/pages/APS/APS055/APS055E1.jsp</result>
		</action>
		
		<!-- APS055E1.jsp(明細)分頁資料中， 點選序號進入資料修改頁面 -->
		<action name="lnkGoUpdate" class="APS055Action" method="lnkGoUpdate">
			<result>/WEB-INF/pages/APS/APS055/APS055U0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS055/APS055E1.jsp</result>
		</action>
		
		<!-- APS055E0.jsp頁面按下進入，進入檔案產生、下載頁面  -->
		<action name="lnkGoDownload" class="APS055Action" method="lnkGoDownload">
			<result>/WEB-INF/pages/APS/APS055/APS055E2.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS055/APS055E0.jsp</result>
		</action>
		
		<!-- APS055E2.jsp頁面產生檔案  -->
		<action name="btnGenFile" class="APS055Action" method="btnGenFile">
			<result>/WEB-INF/pages/APS/APS055/APS055E2.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS055/APS055E2.jsp</result>
		</action>
		
		<!-- APS055E2.jsp頁面下載檔案  -->
		<action name="btnDownloadFile" class="APS055Action" method="btnDownloadFile">
			<result>/WEB-INF/pages/APS/APS055/APS055E2.jsp</result>
			<result name="success" type="stream">
				<param name="contentType">application/octet-stream</param>
				<param name="inputName">fileInputStream</param>
				<param name="contentDisposition">attachment;filename="${downloadFilename}"</param>
				<param name="bufferSize">1024</param>
			</result>
			<result name="input">/WEB-INF/pages/APS/APS055/APS055E2.jsp</result>
		</action>
		
		<!-- APS055U0.jsp 按下儲存鍵，做資料修改的動作  -->
		<action name="btnUpdate" class="APS055Action" method="btnUpdate">
			<result>/WEB-INF/pages/APS/APS055/APS055U0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS055/APS055U0.jsp</result>
		</action>
		
		<!-- APS055E0.jsp按下整批鎖定，鎖定整批續保資料 -->
		<action name="btnFixData" class="APS055Action" method="btnFixData">
			<result>/WEB-INF/pages/APS/APS055/APS055E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS055/APS055E0.jsp</result>
		</action>
		
	</package>
</struts>