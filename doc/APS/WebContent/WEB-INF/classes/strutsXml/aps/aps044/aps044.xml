<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<!-- mantis：FIR0571，處理人員：BJ085，需求單編號：FIR0571 住火_APS到期通知處理作業 -->
<struts>
	<package name="APS044Action" extends="BaseAction" namespace="/aps/044">
		<!-- default -->
		<action name="default" class="APS044Action">
			<result>/WEB-INF/pages/APS/APS044/APS044E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS044/APS044E0.jsp</result>
		</action>
		
		<!-- APS044E0.jsp頁面按下查詢鍵,開始查詢主檔資料 -->
		<action name="btnQuery" class="APS044Action" method="btnQuery">
			<result>/WEB-INF/pages/APS/APS044/APS044E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS044/APS044E0.jsp</result>
		</action>
		
		<!-- APS044E0.jsp(主檔)分頁資料中，重新輸入要顯示的頁數  -->
		<action name="txtChangePageIndex" class="APS044Action" method="txtChangePageIndex">
			<result>/WEB-INF/pages/APS/APS044/APS044E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS044/APS044E0.jsp</result>
		</action>
		
		<!-- APS044E0.jsp，(主檔)分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlPageSizeChanged" class="APS044Action" method="ddlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS044/APS044E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS044/APS044E0.jsp</result>
		</action>
		
		<!-- APS044E0.jsp，(主檔)查詢結果點選上下三角型排序 -->
		<action name="lnkSortQuery" class="APS044Action" method="lnkSortQuery">
			<result>/WEB-INF/pages/APS/APS044/APS044E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS044/APS044E0.jsp</result>
		</action>
		
		<!-- APS044E0.jsp頁面按下主檔批次號碼資料，進入明細查詢頁面 -->
		<action name="lnkGoDetailQuery" class="APS044Action" method="lnkGoDetailQuery">
			<result>/WEB-INF/pages/APS/APS044/APS044E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS044/APS044E0.jsp</result>
		</action>
		
		<!-- APS044E1.jsp頁面按下查詢，查詢明細資料 -->
		<action name="btnDtlQuery" class="APS044Action" method="btnDtlQuery">
			<result>/WEB-INF/pages/APS/APS044/APS044E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS044/APS044E1.jsp</result>
		</action>
		
		<!-- APS044E1.jsp頁面，連結至查詢頁面  -->
		<action name="lnkGoQuery" class="APS044Action" method="lnkGoQuery">
			<result>/WEB-INF/pages/APS/APS044/APS044E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS044/APS044E1.jsp</result>
		</action>
		
		<!-- APS044E1.jsp(明細)分頁資料中，重新輸入要顯示的頁數 -->
		<action name="txtDtlChangePageIndex" class="APS044Action" method="txtDtlChangePageIndex">
			<result>/WEB-INF/pages/APS/APS044/APS044E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS044/APS044E1.jsp</result>
		</action>
		
		<!-- APS044E1.jsp(明細)分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlDtlPageSizeChanged" class="APS044Action" method="ddlDtlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS044/APS044E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS044/APS044E1.jsp</result>
		</action>

		<!-- APS044E1.jsp(明細)分頁資料中， 查詢結果點選上下三角型排序 -->
		<action name="lnkDtlSortQuery" class="APS044Action" method="lnkDtlSortQuery">
			<result>/WEB-INF/pages/APS/APS044/APS044E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS044/APS044E1.jsp</result>
		</action>
		
		<!-- APS044E1.jsp(明細)分頁資料中， 查詢結果點選刪除/還原更新刪除註記 -->
		<action name="btnUpdateFlag" class="APS044Action" method="btnUpdateFlag">
			<result>/WEB-INF/pages/APS/APS044/APS044E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS044/APS044E1.jsp</result>
		</action>
		
		<!-- APS044E1.jsp(明細)分頁資料中， 點選「核心續件資料更新」按鈕，呼叫SP更新最新核心續件情況 -->
		<action name="btnUpdateCoreRenewData" class="APS044Action" method="btnUpdateCoreRenewData">
			<result>/WEB-INF/pages/APS/APS044/APS044E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS044/APS044E1.jsp</result>
		</action>
		
		<!-- APS044E1.jsp(明細)頁面按下「產生xls」按鈕，下載EXCEL檔案 -->
		<action name="btnDownloadFile" class="APS044Action" method="btnDownloadFile">
			<result>/WEB-INF/pages/APS/APS044/APS044E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS044/APS044E1.jsp</result>
			<result name="success" type="stream">
				<param name="contentType">application/vnd.openxmlformats-officedocument.spreadsheetml.sheet</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">attachment;filename="${downloadFileName}"</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>
		
		<!-- mantis：FIR0571，處理人員：BJ085，需求單編號：FIR0571 住火_APS到期通知處理作業-新增印刷廠產檔作業規格 start-->
		<!-- APS044E0.jsp頁面按下進入，進入檔案產生、下載頁面  -->
		<action name="lnkGoDownload" class="APS044Action" method="lnkGoDownload">
			<result>/WEB-INF/pages/APS/APS044/APS044E2.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS044/APS044E0.jsp</result>
		</action>
		
		<!-- APS044E2.jsp頁面依不同檔案按鈕，產生檔案  -->
		<action name="btnGenFile" class="APS044Action" method="btnGenFile">
			<result>/WEB-INF/pages/APS/APS044/APS044E2.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS044/APS044E2.jsp</result>
		</action>
		
		<!-- APS044E2.jsp 產生檔案頁面按下下載按鈕，依各檔案類型開始下載檔案 -->
		<action name="btnDownloadFile2" class="APS044Action" method="btnDownloadFile2">
			<result>/WEB-INF/pages/APS/APS044/APS044E2.jsp</result>
			<result name="success" type="stream">
				<param name="contentType">application/octet-stream</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">attachment;filename="${downloadFilename}"</param>
				<param name="bufferSize">1024</param>
			</result>
			<result name="input">/WEB-INF/pages/APS/APS044/APS044E2.jsp</result>
		</action>
		<!-- mantis：FIR0571，處理人員：BJ085，需求單編號：FIR0571 住火_APS到期通知處理作業-新增印刷廠產檔作業規格 end-->
	</package>
</struts>