		<action name="default" class="APS003Action">
			<result>/WEB-INF/pages/APS/APS003/APS003E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS003/APS003E0.jsp</result>
		</action>
		
		<!-- APS003E0.jsp頁面按下開始查詢鍵,搜尋資料 -->
