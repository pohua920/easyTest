<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<!-- mantis：FIR0459，處理人員：CC009，需求單編號：FIR0459 住火-APS中信續件要保書-排程查詢作業 
     mantis：FIR0458，處理人員：CC009，需求單編號：FIR0458 住火-APS中信續件要保書-資料接收排程 -->
<struts>
	<package name="APS035Action" extends="BaseAction" namespace="/aps/035">
		<!-- default -->
		<action name="default" class="APS035Action">
			<result>/WEB-INF/pages/APS/APS035/APS035E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS035/APS035E0.jsp</result>
		</action>
		
		<!-- APS035E0.jsp頁面按下批次清單查詢鍵,搜尋資料 -->
		<action name="btnQuery" class="APS035Action" method="btnQuery">
			<result>/WEB-INF/pages/APS/APS035/APS035E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS035/APS035E0.jsp</result>
		</action>
		
		<!-- APS035E0.jsp頁面按下明細清單查詢鍵,搜尋資料 -->
		<action name="btnQuery2" class="APS035Action" method="btnQuery2">
			<result>/WEB-INF/pages/APS/APS035/APS035E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS035/APS035E0.jsp</result>
		</action>
		
		<!-- (主檔)分頁資料中，重新輸入要顯示的頁數 -->
		<action name="txtChangePageIndex" class="APS035Action" method="txtChangePageIndex">
			<result>/WEB-INF/pages/APS/APS035/APS035E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS035/APS035E0.jsp</result>
		</action>
		
		<!-- (主檔)分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlPageSizeChanged" class="APS035Action" method="ddlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS035/APS035E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS035/APS035E0.jsp</result>
		</action>
		
		<!-- APS035E0.jsp頁面按下下載連結,下載檔案 -->
		<action name="lnkDownloadPDF" class="APS035Action" method="lnkDownloadPDF">
			<result>/WEB-INF/pages/APS/APS035/APS035E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS035/APS035E0.jsp</result>
			<result name="success" type="stream">
				<param name="contentType">application/octet-stream</param>
				<param name="inputName">fileInputStream</param>
				<param name="contentDisposition">attachment;filename="${aps035DetailVo.pdfName}"</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>
		
		<!-- mantis：FIR0505，處理人員：CC009，需求單編號：FIR0505 手動排程執行功能調整(無規格) start -->
		<!-- APS004E0.jsp頁面按下手動執行鍵,開始執行RenewalFile -->
		<action name="btnExecuteRenewalFile" class="APS035Action" method="btnExecuteRenewalFile">
			<result>/WEB-INF/pages/APS/APS004/APS004E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS004/APS004E0.jsp</result>
		</action>
		<!-- mantis：FIR0505，處理人員：CC009，需求單編號：FIR0505 手動排程執行功能調整(無規格) end -->
		
	</package>
</struts>