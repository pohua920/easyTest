			<result>/WEB-INF/pages/APS/APS004/APS004E0.jsp</result>
		</action>
		
		<!-- APS004E0.jsp頁面按下手動執行鍵,開始執行 Bop02 -->
		<action name="btnExecuteBop02" class="APS009Action" method="btnExecuteBop02">
			<result>/WEB-INF/pages/APS/APS004/APS004E0.jsp</result>
		</action>
		<!-- mantis：FIR0271，處理人員：BJ085，需求單編號：FIR0271 板信保單檔產生作業-排程作業 end -->
		
