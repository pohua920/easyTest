<struts>
	<package name="APS009Action" extends="BaseAction" namespace="/aps/009">
		<!-- default -->
		<action name="default" class="APS009Action">
			<result>/WEB-INF/pages/APS/APS009/APS009E0.jsp</result>
		</action>
		
		<!-- APS009E0.jsp按下查詢鍵，搜尋資料 -->
		<action name="btnQuery" class="APS009Action" method="btnQuery">
			<result>/WEB-INF/pages/APS/APS009/APS009E0.jsp</result>
		</action>

		<!-- APS009E0.jsp(主檔)分頁資料中，重新輸入要顯示的頁數 -->
		<action name="txtChangePageIndex" class="APS009Action" method="txtChangePageIndex">
			<result>/WEB-INF/pages/APS/APS009/APS009E0.jsp</result>
		</action>

		<!-- APS009E0.jsp(主檔)分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlPageSizeChanged" class="APS009Action" method="ddlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS009/APS009E0.jsp</result>
		</action>

		<!-- APS009E0.jsp頁面按下主檔批次號碼資料，查詢明細資料 -->
		<action name="lnkGoDetailQuery" class="APS009Action" method="lnkGoDetailQuery">
			<result>/WEB-INF/pages/APS/APS009/APS009E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS009/APS009E0.jsp</result>
		</action>

		<!-- APS009E1.jsp(明細)分頁資料中，重新輸入要顯示的頁數 -->
		<action name="txtDtlChangePageIndex" class="APS009Action" method="txtDtlChangePageIndex">
			<result>/WEB-INF/pages/APS/APS009/APS009E1.jsp</result>
		</action>

		<!-- APS009E1.jsp(明細)分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlDtlPageSizeChanged" class="APS009Action" method="ddlDtlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS009/APS009E1.jsp</result>
		</action>

		<!-- APS009E2.jsp(檔案清單)分頁資料中，重新輸入要顯示的頁數 -->
		<action name="txtGefChangePageIndex" class="APS009Action" method="txtGefChangePageIndex">
			<result>/WEB-INF/pages/APS/APS009/APS009E2.jsp</result>
		</action>

		<!-- APS009E2.jsp(檔案清單)分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlGefPageSizeChanged" class="APS009Action" method="ddlGefPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS009/APS009E2.jsp</result>
		</action>

		<!-- APS009E0.jsp頁面主檔資料按下執行，產生檔案 -->
		<action name="btnGenerateFile" class="APS009Action" method="btnGenerateFile">
			<result>/WEB-INF/pages/APS/APS009/APS009E0.jsp</result>
		</action>
		
		<!-- APS009E2.jsp檔案清單資料中，按下檔案名稱，下載檔案 -->
		<action name="downloadBopFile" class="APS009Action" method="downloadBopFile">
			<result>/WEB-INF/pages/APS/APS009/APS009E0.jsp</result>
			<result name="success" type="stream">
				<param name="contentType">application/octet-stream</param>
				<param name="inputName">fileInputStream</param>
				<param name="contentDisposition">attachment;filename="${firAgtBatchGenfile.fileName}"</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>

		<!-- APS009E0.jsp主檔資料中，按下主檔檔名，查詢檔案清單 -->
		<action name="lnkGoFilelistQuery" class="APS009Action" method="lnkGoFilelistQuery">
			<result>/WEB-INF/pages/APS/APS009/APS009E2.jsp</result>
		</action>
		
		<!-- mantis：FIR0271，處理人員：BJ085，需求單編號：FIR0271 板信保單檔產生作業-排程作業 start -->
		<!-- APS004E0.jsp頁面按下手動執行鍵,開始執行Bop01 -->
