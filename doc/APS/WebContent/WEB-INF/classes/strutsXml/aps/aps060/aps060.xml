<!-- mantis：FIR0668，處理人員：DP0706，需求單編號：FIR0668_住火_元大續保作業_續件資料處理作業 -->
<struts>
	<package name="APS060Action" extends="BaseAction" namespace="/aps/060">
		<!-- default -->
		<action name="default" class="APS060Action">
			<result>/WEB-INF/pages/APS/APS060/APS060E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS060/APS060E0.jsp</result>
		</action>
		
		<!-- APS060E0.jsp頁面按下查詢鍵,開始查詢主檔資料 -->
		<action name="btnQuery" class="APS060Action" method="btnQuery">
			<result>/WEB-INF/pages/APS/APS060/APS060E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS060/APS060E0.jsp</result>
		</action>
		
		<!-- APS060E0.jsp(主檔)分頁資料中，重新輸入要顯示的頁數  -->
		<action name="txtChangePageIndex" class="APS060Action" method="txtChangePageIndex">
			<result>/WEB-INF/pages/APS/APS060/APS060E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS060/APS060E0.jsp</result>
		</action>
		
		<!-- APS060E0.jsp，(主檔)分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlPageSizeChanged" class="APS060Action" method="ddlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS060/APS060E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS060/APS060E0.jsp</result>
		</action>
		
		<!-- APS060E1.jsp頁面按下查詢鍵，查詢明細資料 -->
		<action name="btnDtlQuery" class="APS060Action" method="btnDtlQuery">
			<result>/WEB-INF/pages/APS/APS060/APS060E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS060/APS060E0.jsp</result>
		</action>
		
		<!-- APS060E0.jsp頁面按下主檔批次號碼資料，查詢明細資料 -->
		<action name="lnkGoDetailQuery" class="APS060Action" method="lnkGoDetailQuery">
			<result>/WEB-INF/pages/APS/APS060/APS060E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS060/APS060E0.jsp</result>
		</action>
		
		<!-- APS060E1.jsp(明細)分頁資料中，重新輸入要顯示的頁數 -->
		<action name="txtDtlChangePageIndex" class="APS060Action" method="txtDtlChangePageIndex">
			<result>/WEB-INF/pages/APS/APS060/APS060E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS060/APS060E1.jsp</result>
		</action>
		
		<!-- APS060E1.jsp(明細)分頁資料中，重新選擇下拉式選單中更改每頁所顯示的資料筆數 -->
		<action name="ddlDtlPageSizeChanged" class="APS060Action" method="ddlDtlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS060/APS060E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS060/APS060E1.jsp</result>
		</action>

		<!-- APS060E1.jsp(明細)分頁資料中， 查詢結果點選上下三角型排序 -->
		<action name="lnkSortDtlQuery" class="APS060Action" method="lnkSortDtlQuery">
			<result>/WEB-INF/pages/APS/APS060/APS060E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS060/APS060E1.jsp</result>
		</action>
		
		<!-- APS060E1.jsp(明細)分頁資料中， 點選下載XLS按鈕，依查詢條件下載批次資料EXCEL -->
		<action name="btnDownloadXls" class="APS060Action" method="btnDownloadXls">
			<result>/WEB-INF/pages/APS/APS060/APS060E1.jsp</result>
			<result name="success" type="stream">
				<param name="contentType">application/octet-stream</param>
				<param name="inputName">fileInputStream</param>
				<param name="contentDisposition">attachment;filename="${downloadFilename}"</param>
				<param name="bufferSize">1024</param>
			</result>
			<result name="input">/WEB-INF/pages/APS/APS060/APS060E1.jsp</result>
		</action>
		
		<!-- APS060E1.jsp(明細)分頁資料中， 點選序號進入資料修改頁面 -->
		<action name="lnkGoUpdate" class="APS060Action" method="lnkGoUpdate">
			<result>/WEB-INF/pages/APS/APS060/APS060U0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS060/APS060E1.jsp</result>
		</action>
		
		<!-- mantis：FIR0676，處理人員：DP0706，需求單編號：FIR0676_住火_元大續保作業_N+1比對擔保品檔案 -->
		<!-- APS060E1.jsp(明細)分頁資料中， 點選[N+1轉檔作業]進入N+1轉檔作業頁面 -->
		<action name="lnkGoN1Upload" class="APS060Action" method="lnkGoN1Upload">
			<result>/WEB-INF/pages/APS/APS060/APS060E3.jsp</result>
		</action>
		
		<!-- APS060E0.jsp頁面按下進入，進入檔案產生、下載頁面  -->
		<action name="lnkGoDownload" class="APS060Action" method="lnkGoDownload">
			<result>/WEB-INF/pages/APS/APS060/APS060E2.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS060/APS060E0.jsp</result>
		</action>
		
		<!-- APS060E2.jsp頁面產生檔案  -->
		<action name="btnGenFile" class="APS060Action" method="btnGenFile">
			<result>/WEB-INF/pages/APS/APS060/APS060E2.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS060/APS060E2.jsp</result>
		</action>
		
		<!-- APS060E2.jsp頁面下載檔案  -->
		<action name="btnDownloadFile" class="APS060Action" method="btnDownloadFile">
			<result>/WEB-INF/pages/APS/APS060/APS060E2.jsp</result>
			<result name="success" type="stream">
				<param name="contentType">application/octet-stream</param>
				<param name="inputName">fileInputStream</param>
				<param name="contentDisposition">attachment;filename="${downloadFilename}"</param>
				<param name="bufferSize">1024</param>
			</result>
			<result name="input">/WEB-INF/pages/APS/APS060/APS060E2.jsp</result>
		</action>
		
		<!-- APS060U0.jsp 按下儲存鍵，做資料修改的動作  -->
		<action name="btnUpdate" class="APS060Action" method="btnUpdate">
			<result>/WEB-INF/pages/APS/APS060/APS060U0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS060/APS060U0.jsp</result>
		</action>
		
		<!-- APS060E0.jsp按下整批鎖定，鎖定整批續保資料 -->
		<action name="btnFixData" class="APS060Action" method="btnFixData">
			<result>/WEB-INF/pages/APS/APS060/APS060E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS060/APS060E0.jsp</result>
		</action>
		
		<!--mantis：FIR0676，處理人員：DP0706，需求單編號：FIR0676_住火_元大續保作業_N+1比對擔保品檔案 START-->
		<!-- 下載sample檔案 -->
		<action name="btnDowloadSample" class="APS060Action" method="btnDowloadSample">
			<result>/WEB-INF/pages/APS/APS060/APS060E1.jsp</result>
			<result name="success" type="stream">
				<param name="contentType">application/octet-stream</param>
				<param name="inputName">fileInputStream</param>
				<param name="contentDisposition">attachment;filename="${downloadFilename}"</param>
				<param name="bufferSize">1024</param>
			</result>
			<result name="input">/WEB-INF/pages/APS/APS060/APS060E1.jsp</result>
		</action>
		
		<!-- 按下送出按鈕，匯入資料 -->
		<action name="btnDataImport" class="APS060Action" method="btnDataImport">
			<result>/WEB-INF/pages/APS/APS060/APS060E3.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS060/APS060E3.jsp</result>
		</action>
		<!--mantis：FIR0676，處理人員：DP0706，需求單編號：FIR0676_住火_元大續保作業_N+1比對擔保品檔案END-->
