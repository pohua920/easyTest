<struts>
	<package name="APS057Action" extends="BaseAction" namespace="/aps/057">
		<!-- default -->
		<action name="default" class="APS057Action">
			<result>/WEB-INF/pages/APS/APS057/APS057E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS057/APS057E0.jsp</result>
		</action>
		
		<action name="btnQuery" class="APS057Action" method="btnQuery">
			<result>/WEB-INF/pages/APS/APS057/APS057E0.jsp</result>
			<result name="query1">/WEB-INF/pages/APS/APS057/APS057E0.jsp</result>
			<result name="query2">/WEB-INF/pages/APS/APS057/APS057E1.jsp</result>
		</action>
		
		<action name="goQuery1" class="APS057Action" method="goQuery1">
			<result>/WEB-INF/pages/APS/APS057/APS057E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS057/APS057E0.jsp</result>
		</action>
		
		<action name="goQuery2" class="APS057Action" method="goQuery2">
			<result>/WEB-INF/pages/APS/APS057/APS057E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS057/APS057E1.jsp</result>
		</action>
		
		<action name="lnkSortQuery" class="APS057Action" method="lnkSortQuery">
			<result>/WEB-INF/pages/APS/APS057/APS057E0.jsp</result>
			<result name="query1">/WEB-INF/pages/APS/APS057/APS057E0.jsp</result>
			<result name="query2">/WEB-INF/pages/APS/APS057/APS057E1.jsp</result>
		</action>

		<action name="txtChangePageIndex1" class="APS057Action" method="txtChangePageIndex1">
			<result>/WEB-INF/pages/APS/APS057/APS057E0.jsp</result>
			<result name="query1">/WEB-INF/pages/APS/APS057/APS057E0.jsp</result>
			<result name="query2">/WEB-INF/pages/APS/APS057/APS057E1.jsp</result>
		</action>
		
		<action name="ddlPageSizeChanged1" class="APS057Action" method="ddlPageSizeChanged1">
			<result>/WEB-INF/pages/APS/APS057/APS057E0.jsp</result>
			<result name="query1">/WEB-INF/pages/APS/APS057/APS057E0.jsp</result>
			<result name="query2">/WEB-INF/pages/APS/APS057/APS057E1.jsp</result>
		</action>
		
		<!-- APS057E1.jsp(明細)頁面按下「產生xls」按鈕，下載EXCEL檔案 -->
		<action name="btnDownloadFile" class="APS057Action" method="btnDownloadFile">
			<result>/WEB-INF/pages/APS/APS057/APS057E1.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS057/APS057E1.jsp</result>
			<result name="success" type="stream">
				<param name="contentType">application/vnd.openxmlformats-officedocument.spreadsheetml.sheet</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">attachment;filename="${downloadFileName}"</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>
	</package>
</struts>