			<result name="input">/WEB-INF/pages/APS/APS042/APS042U0.jsp</result>
		</action>
		
		<action name="btnQuery" class="com.tlg.aps.action.APS042Action" method="btnQuery">
			<result>/WEB-INF/pages/APS/APS042/APS042E0.jsp</result>
			<result name="query1">/WEB-INF/pages/APS/APS042/APS042E0.jsp</result>
		</action>
		
		<action name="lnkGoQuery" class="APS042Action" method="lnkGoQuery">
			<result>/WEB-INF/pages/APS/APS042/APS042E0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS042/APS042E0.jsp</result>
		</action>
		
		<action name="lnkGoUpload" class="APS042Action" method="lnkGoUpload">
			<result>/WEB-INF/pages/APS/APS042/APS042U0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS042/APS042U0.jsp</result>
		</action>
		
		<action name="txtChangePageIndex" class="APS042Action" method="txtChangePageIndex">
			<result>/WEB-INF/pages/APS/APS042/APS042E0.jsp</result>
			<result name="query1">/WEB-INF/pages/APS/APS042/APS042E0.jsp</result>
		</action>
		
		<action name="ddlPageSizeChanged" class="APS042Action" method="ddlPageSizeChanged">
			<result>/WEB-INF/pages/APS/APS042/APS042E0.jsp</result>
			<result name="query1">/WEB-INF/pages/APS/APS042/APS042E0.jsp</result>
		</action>
		
		<action name="btnDataImport" class="APS042Action" method="btnDataImport">
			<result>/WEB-INF/pages/APS/APS042/APS042U0.jsp</result>
			<result name="input">/WEB-INF/pages/APS/APS042/APS042U0.jsp</result>
		</action>
		
		<action name="btnDowloadSample" class="APS042Action" method="btnDowloadSample">
			<result>/WEB-INF/pages/APS/APS042/APS042U0.jsp</result>
