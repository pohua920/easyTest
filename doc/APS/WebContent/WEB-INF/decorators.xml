<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/WEB-INF/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/nodecorate/*</pattern>
        <pattern>/styles/*</pattern>
        <pattern>/scripts/*</pattern>
        <pattern>/images/*</pattern>
        <pattern>/dojo/*</pattern>
        <pattern>/struts/*</pattern>
		<pattern>/resources/*</pattern>
		<pattern>/main.jsp</pattern>
		<pattern>/top.jsp</pattern>
		<pattern>/index.htm</pattern>
		<pattern>/include/userInfo.jsp</pattern>
		<pattern>/include/errorPage.jsp</pattern>
		<pattern>/include/ExceptionHandler.jsp</pattern>
		<pattern>/pages/test/TestE.jsp</pattern>
		<pattern>/test.html</pattern>
		<pattern>/message.jsp</pattern>
    </excludes>

    <decorator name="layout" page="layout.jsp">
        <pattern>/*</pattern>
    </decorator>

</decorators>
